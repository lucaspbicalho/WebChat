@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();

    if (controller == "Home")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    if (controller == "WebChat")
    {
        Layout = "~/Views/Shared/_LayoutWebChat.cshtml";
    }

}